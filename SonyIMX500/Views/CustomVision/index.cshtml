@model SonyIMX500.Models.TraininImages  
@{
}
@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/bs-stepper/dist/js/bs-stepper.min.js"></script>
    <script src="/js/BlobStorage.js"></script>
    <script src="/js/CustomVision.js"></script>
}
<body>
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                    <h3>Sony IMX500 Hands-on Lab Custom Vision</h3>
            </div>
        </div>
    </section>
    <!-- Main content -->
    <div id="loader" class="loading" style="display:none"></div>
    <div class="container-fluid">
        <div class="row row-cols-md-1">
            @*Vertical*@
            <div class="card card-primary card-outline" style="display:none">
                <div class="card-body">
                    <h4>Custom Vision</h4>
                    <div class="row">
                        <div class="col-5 col-sm-2">
                            <div class="nav flex-column nav-tabs h-100" id="vert-tabs-tab" role="tablist" aria-orientation="vertical">
                                <a class="nav-link active" id="vert-tabs-project-tab" data-toggle="pill" href="#vert-tabs-project" role="tab" aria-controls="vert-tabs-project" aria-selected="true">Project</a>
                                <a class="nav-link" id="vert-tabs-images-tab" data-toggle="pill" href="#vert-tabs-images" role="tab" aria-controls="vert-tabs-images" aria-selected="false">Training Images</a>
                                <a class="nav-link" id="vert-tabs-tags-tab" data-toggle="pill" href="#vert-tabs-tags" role="tab" aria-controls="vert-tabs-tags" aria-selected="false">Image Tags</a>
                                <a class="nav-link" id="vert-tabs-training-tab" data-toggle="pill" href="#vert-tabs-training" role="tab" aria-controls="vert-tabs-training" aria-selected="false">Train Model</a>
                            </div>
                        </div>
                        <div class="col-7 col-sm-10">
                            <div class="tab-content" id="vert-tabs-tabContent">
                                <div class="tab-pane text-left fade show active" id="vert-tabs-project" role="tabpanel" aria-labelledby="vert-tabs-project-tab">
                                    <div class="info-box">
                                        <div class="info-box-content">
                                            <h4>Under Construction</h4>
                                            <label for="customVisionProjectListV">Select Custom Vision Project</label>
                                            <select id="customVisionProjectListV" class="form-control select2" style="width: 100%;">Custom Vision Project</select>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="vert-tabs-images" role="tabpanel" aria-labelledby="vert-tabs-images-tab">
                                    <div class="info-box">
                                        <div class="info-box-content">
                                        <h4>Under Construction</h4>
                                        <div class="custom-file">
                                                <input type="file" name="customVisionImages" class="custom-file-input" id="customVisionImages" multiple>
                                                <label class="custom-file-label" for="customVisionImages">Images.</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="vert-tabs-tags" role="tabpanel" aria-labelledby="vert-tabs-tags-tab">
                                    <div class="info-box">
                                        <div class="info-box-content">
                                            <h4>Under Construction</h4>
                                            <label for="customVisionTagListV">Image Tags</label>
                                            <select id="customVisionTagListV" class="form-control select2" style="width: 100%;"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="vert-tabs-training" role="tabpanel" aria-labelledby="vert-tabs-training-tab">
                                    <div class="info-box">
                                        <div class="info-box-content">
                                            <h4>Under Construction</h4>
                                            <button type="button" class="btn btn-success" id="customVisionStartTraining" disabled>
                                                <i class="fas fa-external-link-alt btn-fa"></i>Start Training
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @*Horizonal*@
            <div class="card card-primary card-outline">
                <div class="card-body p-0">
                    <div class="bs-stepper" id="cvStepper">
                        <div class="bs-stepper-header" role="tablist">
                            <!-- your steps here -->
                            <div class="step" data-target="#select-project-step" id="stepSelectProject">
                                <button type="button" class="step-trigger" role="tab" aria-controls="select-project-step" id="select-project-step-trigger">
                                    <span class="bs-stepper-circle">1</span>
                                    <span class="bs-stepper-label">Select Project</span>
                                </button>
                            </div>
                            <div class="line"></div>
                            <div class="step" data-target="#upload-images-step" id="stepUploadImages">
                                <button type="button" class="step-trigger" role="tab" aria-controls="upload-images-step" id="upload-images-step-trigger">
                                    <span class="bs-stepper-circle">2</span>
                                    <span class="bs-stepper-label">Upload Images</span>
                                </button>
                            </div>
                            <div class="line"></div>
                            <div class="step" data-target="#tag-images-step" id="stepTagImages">
                                <button type="button" class="step-trigger" role="tab" aria-controls="tag-images-step" id="tag-images-step-trigger">
                                    <span class="bs-stepper-circle">3</span>
                                    <span class="bs-stepper-label">Tag Images</span>
                                </button>
                            </div>
                            <div class="line"></div>
                            <div class="step" data-target="#train-model-step" id="stepTrainModel">
                                <button type="button" class="step-trigger" role="tab" aria-controls="train-model-step" id="train-model-step-trigger">
                                    <span class="bs-stepper-circle">4</span>
                                    <span class="bs-stepper-label">Train Model</span>
                                </button>
                            </div>
                        </div>

                        <div class="bs-stepper-content">
                            <!-- Select Project -->
                            <div id="select-project-step" class="content" role="tabpanel" aria-labelledby="select-project-step-trigger">
                                <div class="form-group">
                                    <label for="customVisionProjectList">Select Custom Vision Project</label>
                                    <div class="input-group">
                                        <select id="customVisionProjectList" class="form-control select2" style="width: 100%;">Custom Vision Project</select>
                                    </div>
                                </div>
                                <button id="customVisionProjectListNextBtn" class="btn btn-primary" onclick="stepper.next()" disabled>Next</button>
                            </div>
                            <!-- Upload Image -->
                            <div id="upload-images-step" class="content" role="tabpanel" aria-labelledby="upload-images-step-trigger">
                                <h4>Under Construction</h4>
                                <div class="form-group">
                                    <form method="post" enctype="multipart/form-data" id="uploadImagesForm" asp-controller="CustomVision">
                                        <div class="form-group">
                                            <input type="text" name="projectId" id="projectId" value="" hidden/>
                                            <div class="input-group">
                                                <div class="custom-file" id="imageFiles">
                                                    <input type="file" name="images" class="custom-file-input" id="exampleInputFile" multiple >
                                                    <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <button class="btn btn-secondary" onclick="uploadImagesSubmit()">Upload</button>
                                <button class="btn btn-primary" onclick="stepper.previous()">Previous</button>
                                <button class="btn btn-primary" onclick="stepper.next()">Next</button>
                            </div>

                            <!-- Tag Image -->
                            <div id="tag-images-step" class="content" role="tabpanel" aria-labelledby="tag-images-step-trigger">
                                <div class="form-group">
                                    <div class="form-group row">
                                        <label for="cvCreateTagName" class="col-sm-2 col-form-label">Tag</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="cvCreateTagName" class="form-control" id="cvCreateTagName" placeholder="Enter tag name">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="cvCreateTagDesc"  class="col-sm-2 col-form-label">Description</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="cvCreateTagDesc" class="form-control" id="cvCreateTagDesc" placeholder="Enter description">
                                        </div>
                                    </div>
                                    
                                    <button id="cvImagesCreateTagBtn" class="btn btn-success" onclick="cvCreateTag()" disabled>Create a new Tag</button>
                                </div>
                                <button class="btn btn-primary" onclick="stepper.previous()">Previous</button>
                                <button class="btn btn-primary" onclick="stepper.next()">Next</button>
                            </div>

                            <!-- Train Model -->
                            <div id="train-model-step" class="content" role="tabpanel" aria-labelledby="train-model-step-trigger">
                                <h4>Under Construction</h4>
                                <div class="form-group">
                                    <button type="button" class="btn btn-success" id="customVisionStartTraining" disabled>
                                        <i class="fas fa-external-link-alt btn-fa"></i>Start Training
                                    </button>
                                </div>
                                <button class="btn btn-primary" onclick="stepper.previous()">Previous</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="height:51vh" id="cvImagePreviewDiv">
            <div class="col-md-3" style="height:100%">
                <div class="card card-success card-outline" style="height:100%">
                    <div class="card-body p-0" >
                        <div id="cvImageCanvasDiv" style="padding: 10px 20px 10px 20px; text-align:center; display:block;overflow:auto">
                            <canvas id="cvImageCanvas" style="border: 1px solid blue;top:0;bottom:0; right:0; left:0;width:-webkit-fill-available"></canvas>
                            <div>
                                <span style="border: 3px solid rgb(57, 255, 20)">
                                    Selected Region
                                </span>
                                <span style="border: 3px solid red; margin-left:10px">
                                    Proposed Region
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <div class="form-group">
                            <select id="customVisionTagList" class="form-control select2" style="width: 100%;"></select>
                            <button id="cvAddTagBtn" class="btn btn-success" onclick="cvAddTag()" disabled>Add Tag</button>
                        </div>
                    </div>
                </div>                        
            </div>
            <div class="col-md-9" style="height:100%">
                <div class="card card-success card-outline" style="height:100%">
                    <div class="card-body" style="padding:0 0 0 10px">
                        <div class="jsgridDiv">
                            <div id="blobCvImageJsGrid" style="overflow-y:auto"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>

        let currentProjectid;
        let stepperEl;
        let currentImageId;

        $(document).ready(function () {
            console.debug("Custom Vision : document.Ready");
            GetCustomVisionProjects('customVisionProjectList');

        })

        $(window).load(function() {
            //$("#cvImagePreviewDiv").attr("style", "display:none")
        });

        window.addEventListener("resize", resizeCanvas, false);

        // BS-Stepper Init
        document.addEventListener('DOMContentLoaded', function () {
            window.stepper = new Stepper(document.querySelector('.bs-stepper'))
            //stepperEl = new Stepper(document.querySelector('.bs-stepper'))
        })

        stepperEl = document.querySelector('#cvStepper');
        stepperEl.addEventListener('show.bs-stepper', function (event) {
            console.debug('Stepper ', event);

            switch (event.detail.indexStep) {
                case 0:
                    $("#cvImagePreviewDiv").attr("style", "display:none")
                    break;
                case 1:
                    $("#cvImagePreviewDiv").attr("style", "display:none")
                    break;
                case 2:
                    document.getElementById("projectId").value = currentProjectId;
                    GetCustomVisionProjectTags(currentProjectId, customVisionTagList);
                    $("#blobCvImageJsGrid").jsGrid("loadData");
                    $("#cvImagePreviewDiv").attr("style", "display:flex")
                    break;
                case 3:
                    $("#cvImagePreviewDiv").attr("style", "display:none")
                    break;
            }
        })

        //
        // Change event
        //
        $('.custom-file-input').on('change', handleFileSelect);
            function handleFileSelect(evt) {
                var files = evt.target.files;
 
                var output = [];
                for (var i = 0, f; f = files[i]; i++) {
                    output.push(escape(f.name), ', ');
            }
            $(this).next('.custom-file-label').html(output.join(''));
        }

        $('#customVisionProjectList').on('change', function (evt) {
            console.debug(evt.target.id + "() " + evt.type);

            var targetListId = evt.target.id;
            var projectList = document.getElementById(targetListId);

            if (isItemSelected(targetListId, null)) {
                currentProjectId = projectList[projectList.selectedIndex].value;
                GetCustomVisionProjectTags(currentProjectId, 'customVisionTagList');
                $('#customVisionTagList').prop('disabled', false);
                $('#customVisionProjectListNextBtn').prop('disabled', false);
            } else {
                currentProjectId = null;
                $('#customVisionTagList').prop('disabled', true);
                $('#customVisionProjectListNextBtn').prop('disabled', true);
            }
        })

        $('#customVisionTagList').on('change', function (evt) {
            console.debug(evt.target.id + "() " + evt.type);

            var targetListId = evt.target.id;
            var projectList = document.getElementById(targetListId);

            if (isItemSelected(targetListId, null)) {
                var imageId = document.getElementById("cvImageCanvas").getAttribute("imageId");
                console.log("imageid", imageId);
                if (imageId != null) {
                    $("#cvAddTagBtn").prop('disabled', false);
                }
                else
                {
                    $("#cvAddTagBtn").prop('disabled', true);
                }
            } else {
                $("#cvAddTagBtn").prop('disabled', true);
            }
        })

        $('#cvCreateTagName').on('change', function (evt) {
            console.debug(evt.target.id + "() " + evt.type);

            if (document.getElementById(evt.target.id).value.length > 0) {
                $("#cvImagesCreateTagBtn").prop('disabled', false);
            }
            else {
                $("#cvImagesCreateTagBtn").prop('disabled', true);
            }
        })

        //
        // button clicks
        //
        $('#cvImagesCreateTagBtn').click(function (evt) {
            console.debug(evt.target.id + "() " + evt.type);

            var projectList = document.getElementById('customVisionProjectList');

            currentProjectId = projectList[projectList.selectedIndex].value;
            CustomVisionCreateTag(currentProjectId);
            GetCustomVisionProjectTags(currentProjectId, 'customVisionTagList');
            
        })

        //
        // Tab
        //
        $('#upload-images-step-trigger').on('show.bs.tab', function (evt) {
            console.debug(evt.target.id + "() " + evt.type);
        })

        // JSGrid


    </script>
</body>
